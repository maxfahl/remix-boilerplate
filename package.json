	"description": "",
	"license": "MIT",
	"scripts": {
		"build": "cross-env NODE_ENV=production run-s clean build:css build:remix",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "remix build",
		"dev": "cross-env NODE_ENV=development run-p clean dev:*",
		"dev:css": "npm run generate:css -- --watch",
		"dev:remix": "remix dev",
		"generate:css": "tailwindcss -i ./styles/app.css -o ./app/styles/app.css",
		"clean": "del functions && del public/build"
	},
